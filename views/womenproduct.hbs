 <section class="h-100" >
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
          <div>
            <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!" class="text-body">price <i
                  class="fas fa-angle-down mt-1"></i></a></p>
          </div>
        </div>

        
    {{#each women}}
        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
               <a href="/productdetail/{{this._id}}"> <img
                  src="{{this.image.[0]}}"
                  class="img-fluid rounded-3" alt="Cotton T-shirt"></a>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
               <a href="/productdetail/{{this._id}}" class="text-decoration-none text-black"><p class="lead fw-normal mb-2">{{this.name}}</p></a>
                <p><span class="text-muted">category: </span>{{this.category}} </p>
              </div>
              
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">{{this.offerprice}}&nbsp<span style="text-decoration:line-through; color:red;"> â‚¹{{this.price}}</span></h5>
              </div>
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
              
              
              </div>
            </div>
          </div>
        </div>

        {{/each}}

        

        
    </div>
  </div>
</section>